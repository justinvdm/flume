{
  "name": "flume-js",
  "version": "0.1.0",
  "description": "define event-prone applications as a tree of functions",
  "license": "MIT",
  "repository": "justinvdm/flume",
  "main": "dist/flume.min.js",
  "jsnext:main": "src/index.js",
  "author": {
    "name": "justinvdm"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "ava tests/*.test.js",
    "lint": "eslint index.js tests/*.js",
    "check": "npm run lint && npm test",
    "clean": "rm -rf dist",
    "bundle:prd": "NODE_ENV=production rollup -cmo dist/flume.min.js",
    "build": "npm run clean && mkdir dist && npm run bundle:prd",
    "preversion": "npm run check",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "dataflow",
    "reactive",
    "frp",
    "flux"
  ],
  "dependencies": {
    "flume-core": "~0.1.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.5.2",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "eslint": "^3.7.1",
    "rollup": "^0.36.3",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "ava": {
    "require": "babel-register"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
