{
  "name": "flume-js",
  "version": "0.0.0",
  "description": "an experiment in dataflow",
  "license": "MIT",
  "repository": "justinvdm/flume-js",
  "main": "cjs/index.js",
  "jsnext:main": "src/index.js",
  "author": {
    "name": "justinvdm",
    "url": "justinvdm.github.io"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "ava tests/*.test.js",
    "lint": "eslint index.js tests/*.js",
    "ci": "npm lint && npm test",
    "build:cjs": "babel src --out-dir cjs",
    "build:umd:dev": "rollup -cmo dest/flume.js",
    "build:umd:prd": "rollup -c | uglifyjs -mc unsafe > dest/flume.min.js",
    "build:umd": "mkdir -p dest && npm run build:umd:dev && npm run build:umd:prd",
    "build": "npm run build:cjs && npm run build:umd"
  },
  "keywords": [
    "dataflow",
    "reactive",
    "frp",
    "flux"
  ],
  "dependencies": {
    "flume-core": "~0.1.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.5.2",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "eslint": "^3.7.1",
    "rollup": "^0.36.3",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "uglifyjs": "^2.4.10"
  },
  "ava": {
    "require": "babel-register"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
