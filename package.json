{
  "name": "flume-js",
  "version": "0.1.4",
  "description": "define event-prone applications as a tree of functions",
  "license": "MIT",
  "repository": "justinvdm/flume",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "author": {
    "name": "justinvdm"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "ava tests/*.test.js",
    "lint": "eslint index.js tests/*.js",
    "check": "npm run lint && npm run flow && npm test",
    "flow": "flow",
    "clean": "rm -rf lib",
    "transpile": "babel -d lib src",
    "build": "npm run clean && mkdir lib && npm run transpile",
    "preversion": "npm run check",
    "version": "npm run build && git add -A lib",
    "postversion": "git push && git push --tags && npm run clean"
  },
  "keywords": [
    "dataflow",
    "reactive",
    "frp",
    "flux"
  ],
  "dependencies": {
    "flume-core": "~0.1.3"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^3.7.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "flow-bin": "^0.52.0"
  },
  "ava": {
    "require": "babel-register"
  },
  "babel": {
    "presets": [
      "flow"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
